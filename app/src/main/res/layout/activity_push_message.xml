<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFF9266"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/top_left"
        android:layout_width="@dimen/dp_108"
        android:layout_height="@dimen/dp_108"
        android:layout_alignParentLeft="true"
        android:background="@mipmap/emoji_five"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/top_right"
        android:layout_width="@dimen/dp_108"
        android:layout_height="@dimen/dp_108"
        android:layout_alignParentRight="true"
        android:background="@mipmap/emoji_five"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/bottom_left"
        android:layout_width="@dimen/dp_108"
        android:layout_height="@dimen/dp_108"
        android:layout_alignParentBottom="true"
        android:background="@mipmap/emoji_five"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/bottom_right"
        android:layout_width="@dimen/dp_108"
        android:layout_height="@dimen/dp_108"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="@mipmap/emoji_five"
        android:scaleType="fitXY" />

    <ImageView
        android:layout_width="@dimen/dp_308"
        android:layout_height="@dimen/dp_308"
        android:layout_centerInParent="true"
        android:background="@mipmap/lovemsg"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/tv_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/dp_10"
        android:lineSpacingExtra="@dimen/dp_3"
        android:text=" 天天都在你身边，不用苦苦地想你，也不必酸酸地恋你，只需甜甜地爱着你！"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_24" />
</RelativeLayout>
