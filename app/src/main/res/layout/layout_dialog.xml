<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="289dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/bg_round_dialog"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_tip_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/dp_25"
            android:text="提示"
            android:textColor="@color/color333333"
            android:textSize="@dimen/sp_17"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dialog_tip_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/dp_3"
            android:paddingLeft="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_25"
            android:text="多大啊"
            android:textColor="@color/color333333"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/dialog_tip_oneline_message"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/color333333"
            android:textSize="@dimen/sp_17"
            android:visibility="gone" />

        <TextView
            android:id="@+id/dialog_tip_oneline_center_message"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="@dimen/dp_20"
            android:textColor="@color/colore64910"
            android:textSize="@dimen/sp_14"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:id="@+id/dialog_tip_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/colordddddd" />

    <TextView
        android:id="@+id/dialog_tip_know"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_49"
        android:clickable="true"
        android:gravity="center"
        android:padding="@dimen/dp_10"
        android:text="知道了"
        android:textColor="@color/colorff6b00"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/dialog_two_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_49"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/dialog_tip_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:text="取消"
            android:textColor="@color/color333333"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold" />

        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            android:background="@color/colordddddd" />

        <TextView
            android:id="@+id/dialog_tip_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:text="确定"
            android:textColor="@color/colorff6b00"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>