<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFF9266">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/layout_title" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.youth.banner.Banner
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_200"
                app:banner_layout="@layout/banner_custom_viewpager"
                app:indicator_drawable_selected="@drawable/selected_radius"
                app:indicator_drawable_unselected="@drawable/unselected_radius" />

            <ImageView
                android:id="@+id/iv_location"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:padding="@dimen/dp_10"
                android:scaleType="fitXY"
                android:src="@mipmap/iv_location" />
        </RelativeLayout>

        <com.liujie.loveyouapp.mvp.view.UPMarqueeView
            android:id="@+id/upTitle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/colore5e5e5" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/iv_me"
                android:layout_width="@dimen/dp_88"
                android:layout_height="@dimen/dp_100"
                android:layout_marginLeft="@dimen/dp_10"
                android:scaleType="fitXY"
                android:src="@mipmap/header_me"
                app:riv_oval="true" />

            <ImageView
                android:id="@+id/iv_two"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_toRightOf="@+id/iv_me"
                android:src="@mipmap/xx" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/iv_you"
                android:layout_width="@dimen/dp_84"
                android:layout_height="@dimen/dp_100"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_toRightOf="@+id/iv_two"
                android:scaleType="fitXY"
                android:src="@mipmap/header"
                app:riv_oval="true" />

            <TextView
                android:id="@+id/tv_lovedays"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_toLeftOf="@+id/tv_day"
                android:text="425"
                android:textSize="@dimen/sp_30" />

            <TextView
                android:id="@+id/tv_day"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:text="天"
                android:textSize="@dimen/sp_18" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@+id/tv_day"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_20"
                android:text="相恋时间"
                android:textSize="@dimen/sp_18" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.liujie.loveyouapp.mvp.heart.HeartView
                android:id="@+id/tv_love"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_320"
                android:layout_centerInParent="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_54"
                android:layout_marginTop="@dimen/dp_90"
                android:layout_marginRight="@dimen/dp_50"
                android:text="我不慎调用了爱你这个方法，当我义无反顾的把自己作为参数传进这个方法时，我才发现爱上你是一个死循环。"
                android:textColor="@color/color333333"
                android:textSize="@dimen/sp_16"
                android:textStyle="italic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_180"
                android:layout_marginRight="@dimen/dp_110"
                android:text="爱你直到永永远远。"
                android:textColor="@color/color333333"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_200"
                android:layout_marginRight="@dimen/dp_120"
                android:text="- 小婕儿"
                android:textColor="@color/color333333"
                android:textSize="@dimen/sp_14"
                android:textStyle="italic" />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>
